generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model image {
  id        Int      @id @default(autoincrement())
  filename  String
  url       String
  createdAt DateTime @default(now())
  mimetype  String
  size      Int
  userId    Int
  user      user     @relation(fields: [userId], references: [id], map: "Image_userId_fkey")

  @@index([userId], map: "Image_userId_fkey")
}

model user {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique(map: "User_email_key")
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime
  image     image[]
}
